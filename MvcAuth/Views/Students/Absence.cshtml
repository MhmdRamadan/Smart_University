@model MvcAuth.Models.ModelView.AbsenceView
@{
    ViewBag.Title = "Absence";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Absence</h2>
@using (Html.BeginForm("ComparePic", "Students", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.Label("QR Code", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">

            <input type="file" name="ImageData" id="ImageData" onchange="fileCheck(this);" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" onchange="fileCheck(this);" />
        </div>
    </div>
    @Html.ActionLink("Back to navigation", "navigation")
}
